<%= link_to "Back to the users", admin_users_path %>

<%= form_for [:admin, @users], url: admin_users_path(@users), html: {method: :POST} do |f| %>
  <% if @users.errors.any? %>
    <div>
      <%= pluralize(@users.errors.count, "error") %> prevented the account from being created:
      <ul>
        <% @users.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "email" %><br>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.label "firstname", "First Name" %><br>
    <%= f.text_field "firstname" %>
  </div>
  <div>
    <%= f.label "lastname", "Last Name" %><br>
    <%= f.text_field "lastname" %>
  </div>
  <div>
    <%= f.label "Admin" %><br>
    <%= f.check_box "admin" %>
  </div>
  <div>
    <%= f.label "password" %><br>
    <%= f.password_field "password" %>
  </div>
  <div>
    <%= f.label "password_confirmation" %><br>
    <%= f.password_field "password_confirmation" %>
  </div>
  <div><%= f.submit "Submit" %></div>
<% end %>